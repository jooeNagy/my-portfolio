rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access to the messages collection
    match /messages/{document} {
      // Allow anyone to create new messages (for contact form)
      allow create: if true;
      // Only allow reading your own messages (optional - you might want to disable this)
      allow read: if false;
      // Don't allow updates or deletes from the client
      allow update, delete: if false;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}